<h4 style="text-align:center;"><STROng>Modificar alguna novedad</STROng></h4> 

<div class="container" style="margin:50px ">
<form action="/admin/novedades/modificar" method="post">
<input type="hidden" value="{{novedad.id}}" name="id">
    <div class="row mb-3">

        <div class="col-sm-10">
            <input type="text" class="form-control"  placeholder="titulo" name="titulo" value=" {{novedad.titulo}} ">
        </div>
    </div>
    <div class="row mb-3" > 
        <div class="col-sm-10">
            <textarea type="text" class="form-control" placeholder="subtitulo" name="subtitulo"> {{novedad.subtitulo}} </textarea>
        </div>
    </div>
<div class="form-group">
    <div class="col-sm-10">
      <textarea type="text" class="form-control" 
      placeholder="cuerpo" name="cuerpo"> {{novedad.cuerpo}} </textarea>
    </div>
    <button style="margin-top: 50px ;" type="submit" class="btn btn-outline-primary">modificar</button>
</div>
</form>
{{#if error}}
<p> {{message}} </p>
{{/if}}
</div>