<div class="container" style="margin: top 20px;">
  <div class="row">
    <p class="text-end" style=padding:10px;>hola {{usuario}}! <a href="/admin/login/logout"><button type="button"
          class="btn btn-danger">cerrar session</button></a></p>
  </div>


</div>

<div class="row" style="margin: top -20px;;">
  <h2>lista de novedades </h2>

  <p class="text-end"><a href="/admin/novedades/agregar"><span style="padding: 15px;" class="badge text-bg-success">nuevo</span></a></p>

</div>

<table class="table table">
  <thead class="table-dark">
    <th scope="row">#</th>
    <td colspan="2">titulo</td>
    <td class="text-end">acciones</td>

  </thead>
  <tbody>
    {{#each novedades}}
    <tr>
      <th scope="row"> {{id}} </th>
      <td colspan="2"> {{titulo}} </td>
      <td class="text-end"><a href="/admin/novedades/modificar/{{id}}"><i class="fa-solid fa-pen"></a></i> <a href="/admin/novedades/eliminar/{{id}} "><i
            class="fa-solid fa-trash"></i></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>